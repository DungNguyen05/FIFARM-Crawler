# ==============================================
# MULTI-SOURCE CRAWLER CONFIGURATION
# Copy this file to .env and modify as needed
# ==============================================

# CRAWLER ENABLE/DISABLE CONFIGURATION
ENABLE_COIN98=true
ENABLE_TAPCHIBITCOIN=true

# Add Articles API Endpoint
API_ENDPOINT=http://localhost:8080/admin/news-articles

# COIN98 CRAWLER CONFIGURATION
COIN98_HOME_URL=https://coin98.net/home/moi-nhat
COIN98_MAX_ARTICLES=5
COIN98_API_ENDPOINT=http://localhost:8080/admin/news-articles

# TapchiBitcoin specific settings
TAPCHIBITCOIN_HOME_URL=https://tapchibitcoin.io/
TAPCHIBITCOIN_MAX_ARTICLES=5
TAPCHIBITCOIN_API_ENDPOINT=http://localhost:8080/admin/news-articles

# ==============================================
# SCHEDULE CONFIGURATION (APPLIES TO ALL CRAWLERS)
# ==============================================

# SCHEDULE_TYPE options:
# - "interval" : Run every X minutes/hours
# - "daily"    : Run once per day at specific time
# - "hourly"   : Run every hour
# - "custom"   : Run at multiple specific times per day

SCHEDULE_TYPE=interval

# For SCHEDULE_TYPE="interval"
# Set interval in minutes (60 = 1 hour, 30 = 30 minutes, 120 = 2 hours)
INTERVAL_MINUTES=60

# For SCHEDULE_TYPE="daily" 
# Set time in HH:MM format (24-hour)
DAILY_TIME=09:00

# For SCHEDULE_TYPE="custom"
# Set multiple times separated by commas (24-hour format)
CUSTOM_TIMES=06:00,12:00,18:00,22:00

# Run immediately when starting? (true/false)
RUN_IMMEDIATELY=true

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file name
LOG_FILE=crawler.log

# ==============================================
# EXAMPLE CONFIGURATIONS
# ==============================================

# Example 1: Only Coin98, every 30 minutes
# ENABLE_COIN98=true
# ENABLE_TAPCHIBITCOIN=false
# SCHEDULE_TYPE=interval
# INTERVAL_MINUTES=30

# Example 2: Only TapchiBitcoin, every 2 hours  
# ENABLE_COIN98=false
# ENABLE_TAPCHIBITCOIN=true
# SCHEDULE_TYPE=interval
# INTERVAL_MINUTES=120

# Example 3: Both crawlers, daily at 8 AM
# ENABLE_COIN98=true
# ENABLE_TAPCHIBITCOIN=true
# SCHEDULE_TYPE=daily
# DAILY_TIME=08:00

# Example 4: Both crawlers, 4 times per day
# ENABLE_COIN98=true
# ENABLE_TAPCHIBITCOIN=true
# SCHEDULE_TYPE=custom
# CUSTOM_TIMES=06:00,12:00,18:00,23:00
